<%- include('./partials/head.ejs'); %>

<main>
  <% if(message){ %>
    <div class="message">
    <%= message %>
    </div>
  <% } %>
<p>
  <ul>
  <% for(var i=0; i<files.length; i++) { %>
      <li><a href="/uploads/<%= files[i] %>"><img src="/uploads/<%= files[i]%>"/></a>
        <% for(var c=0; c<comments.length; i++) { %>
          <% if (comments[c].photo_id == i) {%>
            <ul>
              <li><%= comments[c].comment %></li>
            </ul>
          <% } %>
        <% } %>
        <form action="files/comment", method="post">
            <label for="comment">Comment</label>
            <input type="text"  name="comment" value="">
            <input type="number" name = "photo_id" hidden  value="<%=i%>">
            <input type="submit" value="post"/>
        </form>
      </li>
      <% } %>
  </ul>
</p>
</main>

<%- include('./partials/foot.ejs'); %>
